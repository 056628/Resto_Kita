<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg1">

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:gravity="center"
            android:text="Pilih Menu"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/menu"
            android:onClick="profiles"
            android:src="@drawable/ussername"
            tools:ignore="UsingOnClickInXml" />
    </LinearLayout>

    <View
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/menu"
        android:background="#BBBBBB" />

    <TextView
        android:id="@+id/makanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RTX 40 SERIES"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/garis"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/gbrmkn"
        android:layout_width="189dp"
        android:layout_height="189dp"
        android:layout_below="@+id/makanan"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:onClick="Makanan"
        android:src="@drawable/rtx40seriesmenu"
        tools:ignore="UsingOnClickInXml" />

    <TextView
        android:id="@+id/minuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RTX 30 SERIES"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_below="@id/gbrmkn"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/gbrmnum"
        android:layout_width="191dp"
        android:layout_height="191dp"
        android:layout_below="@+id/minuman"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/rtx30seriesmenu"
        android:onClick="minuman"
        tools:ignore="UsingOnClickInXml" />








</RelativeLayout>